@model models.modeldata
<link href="~/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
<link href="~/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
<link href="~/assets/css/style.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container-scroller">
    @Html.Partial("~/Views/layout/_navbar.cshtml")
    <div class="container-fluid page-body-wrapper">
        @Html.Partial("~/Views/layout/_sidebar.cshtml")
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Danh sách quy định giảm giá </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/giamgia/addquydinh">
                                    <i class="fas fa-plus"></i> Thêm quy định
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="#">
                                    <i class="fas fa-file-excel"></i> Xuất excel
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <table class="table table-bordered" style="justify-content:center; text-align:center">
                                    <thead>
                                        <tr>
                                            <th> ID </th>
                                            <th> Số lần đặt hàng </th>
                                            <th> Tổng tiền tối thiểu </th>
                                            <th> Phần trăm giảm giá </th>
                                            <th> Ngày ra quy định </th>
                                            <th> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.quy_Dinh_Giam_Gialist != null && Model.quy_Dinh_Giam_Gialist.Count > 0)
                                        {
                                            int id = 1;
                                            foreach (var quydinh in Model.quy_Dinh_Giam_Gialist)
                                            {
                                                <tr>
                                                    <td>@id</td>
                                                    <td>@quydinh.solandathang</td>
                                                    <td>
                                                        @string.Format("{0:N0} VNĐ", @quydinh.tongtientoithieu)
                                                    </td>
                                                    <td>@quydinh.phantramgiamgia</td>
                                                    <td>@quydinh.ngaythemquydinh.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        <a href="/giamgia/xoaquydinh/?id=@quydinh.id" class="btn btn-danger">
                                                            <i class="fas fa-trash-alt"></i> Xoá
                                                        </a>

                                                        <a href="/giamgia/updatequydinh/?id=@quydinh.id" class="btn btn-primary">
                                                            <i class="fas fa-edit"></i> Sửa
                                                        </a>
                                                    </td>
                                                </tr>
                                                id++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5">Không có quy định nào cả</td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery.min.js"></script>
<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/assets/vendors/chart.js/chart.min.js"></script>
<script src="~/assets/js/jquery.cookie.js"></script>
<script src="~/assets/js/off-canvas.js"></script>
<script src="~/assets/js/hoverable-collapse.js"></script>
<script src="~/assets/js/misc.js"></script>
<script src="~/assets/js/dashboard.js"></script>
<script src="~/assets/js/todolist.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
