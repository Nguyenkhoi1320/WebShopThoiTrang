@model models.modeldata
<link href="~/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
<link href="~/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
<link href="~/assets/css/style.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container-scroller">
    @Html.Partial("~/Views/layout/_navbar.cshtml")
    <div class="container-fluid page-body-wrapper">
        @Html.Partial("~/Views/layout/_sidebar.cshtml")
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Cập nhật sản phẩm </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a  href="/product/listproduct">
                                    <button class="item-back">Quay lại</button>
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <form Action="/product/UpdateProduct" method="post">
                                    <input type="hidden" class="form-control" value="@Model.san_Pham.id" id="id" name="id" required>
                                    <div class="form-group">
                                        <label for="tensanpham">Tên sản phẩm:</label>
                                        <input type="text" class="form-control" value="@Model.san_Pham.tensanpham" id="tensanpham" name="tensanpham" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="giaban">Giá:</label>
                                        <input type="number" class="form-control" value="@Model.san_Pham.giaban" id="giaban" name="giaban" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="mota">Mô tả:</label>
                                        <textarea class="form-control" id="mota" name="mota" required>@Model.san_Pham.mota</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="soluongcon">Số lượng còn:</label>
                                        <input type="number" class="form-control" value="@Model.san_Pham.soluongcon" id="soluongcon" name="soluongcon" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="nhacungcap_id">Chọn nhà cung cấp:</label>
                                        <select class="form-control" id="nhacungcap_id" name="nhacungcap_id">
                                            @if (Model.nha_Cung_CapList != null && Model.nha_Cung_CapList.Count > 0)
                                            {
                                                foreach (var nha_Cung_Cap in Model.nha_Cung_CapList)
                                                {
                                                    <option value="@nha_Cung_Cap.id">@nha_Cung_Cap.tennhancungcap</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="phantramgiamgia">Ảnh:</label>
                                        <input type="text" class="form-control" value="@Model.san_Pham.anh" id="anh" name="anh" required>
                                    </div>                  
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery.min.js"></script>
<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/assets/vendors/chart.js/chart.min.js"></script>
<script src="~/assets/js/jquery.cookie.js"></script>
<script src="~/assets/js/off-canvas.js"></script>
<script src="~/assets/js/hoverable-collapse.js"></script>
<script src="~/assets/js/misc.js"></script>
<script src="~/assets/js/dashboard.js"></script>
<script src="~/assets/js/todolist.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
