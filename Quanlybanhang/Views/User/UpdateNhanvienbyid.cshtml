@model models.modeldata
<link href="~/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
<link href="~/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
<link href="~/assets/css/style.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container-scroller">
    @Html.Partial("~/Views/layout/_navbar.cshtml")
    <div class="container-fluid page-body-wrapper">
        @Html.Partial("~/Views/layout/_sidebar.cshtml")
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Cập nhật giảm giá </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/giamgia/quydinhgiamgia">
                                    Quay lại
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <form Action="/user/updatenhanvien" method="post">
                                    <input type="hidden" class="form-control" value="@Model.nhan_Vien.id" id="id" name="id" required>
                                    <div class="form-group">
                                        <label for="solandathang">Họ và Tên:</label>
                                        <input type="text" class="form-control" value="@Model.nhan_Vien.hovaten" id="hovaten" name="hovaten" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="tongtientoithieu">Điện thoại:</label>
                                        <input type="number" class="form-control" value="@Model.nhan_Vien.dienthoai" id="dienthoai" name="dienthoai" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="phantramgiamgia">Email:</label>
                                        <input type="email" class="form-control" value="@Model.nhan_Vien.email" id="email" name="email" required>
                                    </div>
                                    <div class="form-group">
                                        <select class="form-select" aria-label="Lựa chọn vai trò" name="vaitro">
                                            <option selected>Lựa chọn vai trò</option>
                                            <option value="Quản Lý">Quản Lý</option>
                                            <option value="Nhân Viên">Nhân Viên</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="phantramgiamgia">Địa chỉ:</label>
                                        <input type="text" class="form-control" value="@Model.nhan_Vien.diachi" id="diachi" name="diachi" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="phantramgiamgia">Lương:</label>
                                        <input type="number" class="form-control" value="@Model.nhan_Vien.luong" id="luong" name="luong" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery.min.js"></script>
<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/assets/vendors/chart.js/chart.min.js"></script>
<script src="~/assets/js/jquery.cookie.js"></script>
<script src="~/assets/js/off-canvas.js"></script>
<script src="~/assets/js/hoverable-collapse.js"></script>
<script src="~/assets/js/misc.js"></script>
<script src="~/assets/js/dashboard.js"></script>
<script src="~/assets/js/todolist.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
