@model models.modeldata
<link href="~/css/style-prefix.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet">
@* @Html.Partial("~/Views/layout/_header.cshtml") *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<title>Sign Up</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
    body{
        background-image: url('https://localhost:7068/images/fashion-clothing-shop-clothes.jpg');
        background-size: cover;
    }
    .form-container {
        margin: 90px;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background: rgba(255, 255, 255, 0.6);
    }

    .form-title {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-control {
        border-radius: 8px;
    }

    .submit-btn {
        border-radius: 8px;
        padding: 10px 20px;
    }
</style>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 form-container">
            <h2 class="form-title">Đăng Ký</h2>
            <form method="post" Action="/User/RegisterKhachHang">
                <div class="mb-3">
                    <input type="text" class="form-control" name="hovaten" placeholder="Họ và tên">
                </div>
               @*  <div class="mb-3">
                    <input type="text" class="form-control" name="diachi" placeholder="Địa chỉ">
                </div> *@
                <div class="mb-3">
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="sodienthoai" placeholder="Số điện thoại">
                </div>
             @*    <div class="mb-3">
                    <input type="text" class="form-control" name="cccd" placeholder="CCCD">
                </div> *@
                <div class="row">
                    <div class="col-6">
                        <div class="mb-3">
                            <input type="password" class="form-control" name="matkhau" placeholder="Mật khẩu">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <input type="password" class="form-control" name="lmatkhau" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="submit" value="Đăng ký" class="submit-btn btn btn-success">
                </div>
                <p class="mt-3 text-center">Đã có tài khoản ? <a href="/home/login">Đăng nhập</a></p>
            </form>
        </div>
    </div>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

@if (TempData["matkhaukhongdung"] != null)
{
    <script>
        Swal.fire({
            position: "top-right",
            title: 'Mật khẩu không đúng!',
            icon: "error",
            showConfirmButton: false,
        });
    </script>

}