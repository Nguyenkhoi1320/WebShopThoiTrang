@model List<models.modeldata>
<link href="~/css/style-prefix.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet">
@Html.Partial("~/Views/layout/_header.cshtml")
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<title>Sign Up</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <h5 style="margin: 10px 0px 0px 15px;">Đơn hàng</h5>
            <div class="card-body">
                <table class="table table-bordered" style="justify-content:center; text-align:center">
                    <thead>
                        <tr>
                            <th> ID </th>
                            <th> Tên khách hàng </th>
                            <th> Ngày tạo </th>
                            <th> Trạng thái </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            int id = 1;
                            foreach (var modeldataitem in Model)
                            {
                                <tr>
                                    <td>@id</td>
                                    <td>@modeldataitem.khach_hang.hovaten</td>
                                    <td>@modeldataitem.DonHangs.ngaytao.ToString("dd/MM/yyyy")</td>
                                    <td>@modeldataitem.DonHangs.trangthai</td>
                                    <td>
                                        <a href="/chitietdonhang/Chitietdonhangkh/?donHangId=@modeldataitem.DonHangs.id" class="btn btn-primary">
                                            Xem
                                        </a>
                                    </td>
                                </tr>
                                id++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">Không có quy định nào cả</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

@if (TempData["matkhaukhongdung"] != null)
{
    <script>
        Swal.fire({
            position: "top-right",
            title: 'Mật khẩu không đúng!',
            icon: "error",
            showConfirmButton: false,
        });
    </script>
}
