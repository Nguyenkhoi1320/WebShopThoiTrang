@model models.modeldata
<link href="~/assets/vendors/mdi/css/materialdesignicons.min.css" rel="stylesheet" />
<link href="~/assets/vendors/css/vendor.bundle.base.css" rel="stylesheet" />
<link href="~/assets/css/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<div class="container-scroller">
    @Html.Partial("~/Views/layout/_navbar.cshtml")
    <div class="container-fluid page-body-wrapper">
        @Html.Partial("~/Views/layout/_sidebar.cshtml")
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="page-header">
                    <h3 class="page-title"> Thêm mã giảm giá </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/giamgia/magiamgia">
                                    Quay lại
                                </a>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <form Action="/giamgia/addmagiamgias" method="post">
                                    <div class="form-group">
                                        <label for="magiamgia">Mã giảm giá:</label>
                                        <input type="text" class="form-control" id="magiamgia" name="magiamgia" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="mota">Mô tả:</label>
                                        <input type="text" class="form-control" id="mota" name="mota" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="solansudungtoida">Số lần sử dụng tối đa:</label>
                                        <input type="number" class="form-control" id="solansudungtoida" name="solansudungtoida" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="ngayketthuc">Ngày kết thúc:</label>
                                        <input type="date" class="form-control" id="ngayketthuc" name="ngayketthuc" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="quydinggiamgia_id">Chọn ID quy định:</label>
                                        <select class="form-control" id="quydinggiamgia_id" name="quydinggiamgia_id">
                                            @if (Model.quy_Dinh_Giam_Gialist != null && Model.quy_Dinh_Giam_Gialist.Count > 0)
                                            {
                                                foreach (var quydinh in Model.quy_Dinh_Giam_Gialist)
                                                {
                                                    <option value="@quydinh.id">@quydinh.id</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Thêm</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery.min.js"></script>
<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/assets/vendors/chart.js/chart.min.js"></script>
<script src="~/assets/js/jquery.cookie.js"></script>
<script src="~/assets/js/off-canvas.js"></script>
<script src="~/assets/js/hoverable-collapse.js"></script>
<script src="~/assets/js/misc.js"></script>
<script src="~/assets/js/dashboard.js"></script>
<script src="~/assets/js/todolist.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
